doctype html
html(lang='en', ng-app='banserver')
    block link
        -var selected = 'unlisted'; //default

    -var menu = { 'Unlisted': '/unlisted', 'Banned': '/banned', 'Moderators': '/moderators', 'Statistics': '/statistics' };
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Ban Manager
    link(href='lib/bootstrap-css/css/bootstrap.css', rel='stylesheet')
    link(href='css/app.css', rel='stylesheet')
body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Ban Manager
            // Collect the nav links, forms, and other content for toggling
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                    block nav
                        each val, key in menu
                            -console.log(selected,key);
                            if selected === key
                                li(class='active')
                                    a.active(href=val, title=key)= key
                                    span.sr-only (current)
                            else
                                li
                                    a(href=val, title=key)= key
            // /.navbar-collapse
        // /.container
    .container(ng-view='')
        block content
            | test
    script(src='lib/jquery/dist/jquery.js')
    script(src='lib/lodash/dist/lodash.js')
    script(src='js/main.js')
